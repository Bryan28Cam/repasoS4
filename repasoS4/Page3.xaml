<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="repasoS4.Page3">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Beige"></Setter>
                <Setter Property="TextColor" Value="Blue"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUusario" FontSize="14" TextColor="Red" HorizontalTextAlignment="End" />
            <Label Text="VENTANA 3" FontSize="24" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="txtDato" IsReadOnly="True"></Entry>
            <Entry x:Name="txtAlumno" IsReadOnly="True"></Entry>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>